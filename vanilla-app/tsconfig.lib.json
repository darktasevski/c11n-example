{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vite/client"],
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../shared-lib/tsconfig.lib.json"
    }
  ]
}
